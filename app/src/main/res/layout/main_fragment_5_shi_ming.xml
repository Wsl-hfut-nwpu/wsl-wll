<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="55dp">
        <ImageButton
            android:id="@+id/fanhui_4"
            android:layout_marginTop="3dp"
            android:layout_width="55dp"
            android:layout_gravity="center"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/mima_zhaohui"/>
        <TextView
            android:layout_width="165dp"
            android:gravity="center|right"
            android:layout_height="55dp"
            android:textColor="#8B8682"
            android:textSize="20dp"
            android:text="实名认证" />
        <ImageView
            android:id="@+id/mainfragment_5_shezhi"
            android:layout_width="65dp"
            android:gravity="center|right"
            android:layout_marginLeft="60dp"
            android:layout_height="match_parent"
            android:background="@mipmap/my_reallyname"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_blue" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="45dp">
        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:textColor="@color/text_blue"
            android:textSize="17dp"
            android:text="电话号码" />
        <EditText
            android:id="@+id/sm5"
            android:layout_width="230dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:textColor="#8B8682"
            android:textSize="17dp"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainAll_text_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="45dp">
        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:textColor="@color/text_blue"
            android:textSize="17dp"
            android:text="真实姓名" />
        <EditText
            android:id="@+id/sm1"
            android:layout_width="230dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:textColor="#8B8682"
            android:textSize="17dp"
            android:background="@null"
            android:hint="请输入真实姓名"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainAll_text_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="45dp">
        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:textColor="@color/text_blue"
            android:textSize="17dp"
            android:text="证件号码" />
        <EditText
            android:id="@+id/sm3"
            android:layout_width="230dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:textColor="#8B8682"
            android:textSize="17dp"
            android:background="@null"
            android:hint="请输入证件号码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainAll_text_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="45dp">
        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:textColor="@color/text_blue"
            android:textSize="17dp"
            android:text="年龄" />
        <EditText
            android:id="@+id/sm4"
            android:layout_width="230dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:textColor="#8B8682"
            android:textSize="17dp"
            android:background="@null"
            android:hint="请输入年龄"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainAll_text_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="45dp">
        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:textColor="@color/text_blue"
            android:textSize="17dp"
            android:text="性别" />
        <RadioGroup
            android:layout_marginTop="3dp"
            android:id="@+id/boy_or_gril"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:layout_marginLeft="40dp"
                android:id="@+id/boy"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="男" />
            <RadioButton
                android:id="@+id/gril"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainAll_text_gray" />
    <TextView
        android:layout_width="320dp"
        android:gravity="center"
        android:id="@+id/shiming_submit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="45dp"
        android:textColor="#FFFFFF"
        android:background="@color/text_blue"
        android:textSize="17dp"
        android:text="提 交" />
</LinearLayout>