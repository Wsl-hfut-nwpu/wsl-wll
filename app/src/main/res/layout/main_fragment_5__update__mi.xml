<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".ForgetPasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_marginTop="3dp"
                android:layout_width="55dp"
                android:id="@+id/fanhui_5"
                android:layout_height="match_parent"
                android:background="@mipmap/mima_zhaohui"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:textColor="#8B8682"
                android:textSize="18dp"
                android:text="修改密码" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_blue" />
        <EditText
            android:id="@+id/ForgetPasswordPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:textSize="15dp"
            android:hint="Phone" />

        <EditText
            android:id="@+id/ForgetPasswordInput_yanzhengname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:textSize="15dp"
            android:hint="Identifying Code" />
        <EditText
            android:id="@+id/ForgetPasswordPassword_one"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:textSize="15dp"
            android:inputType="numberPassword" />
        <EditText
            android:id="@+id/ForgetPasswordPassword_two"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password Again"
            android:textSize="15dp"
            android:inputType="numberPassword" />
        <TextView
            android:id="@+id/ForgetPasswordGet_yanzhengpassword"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:textSize="15dp"
            android:text="获取验证码" />
        <TextView
            android:id="@+id/ForgetPasswordSubmit"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/text_blue"
            android:gravity="center"
            android:textSize="15dp"
            android:text="提      交"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
