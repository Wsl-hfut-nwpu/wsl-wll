<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#66CDAA"
        android:padding="5dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="影像如下"
            android:gravity="center|right"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="关闭"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titlelayout"
        android:layout_centerInParent="true"
        android:background="@drawable/doctor_main_fragment_3_bg"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="影像一"
            android:textColor="#04AEDA"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/yingxiang_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="#04AEDA"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#EAEAEA" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="影像二"
            android:textColor="#04AEDA"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/yingxiang_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="#04AEDA"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#EAEAEA" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="影像三"
            android:textColor="#04AEDA"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/yingxiang_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="#04AEDA"
            android:layout_marginBottom="20dp"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#EAEAEA" />


    </LinearLayout>
</RelativeLayout>