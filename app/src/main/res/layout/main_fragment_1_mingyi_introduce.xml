<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <!--先来个帧动画,所以这里创空视图，后台获取到该视图之后动态添加帧动画的布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/fanhui"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/mima_zhaohui"/>
        <TextView
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="#8B8682"
            android:textSize="18dp"
            android:text="名医简介" />
    </LinearLayout>
    <!--下划线设定-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_blue" />

    <!--下划线设定-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="130dp">

        <WebView
            android:id="@+id/introduce_mingyi_head"
            android:layout_marginLeft="150dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#D9D9D9" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <!--下划线设定-->
        <!--layout_gravity设定相对于父布局位置，而gravity是文字在具体控件上的位置-->
        <TextView
            android:layout_width="7dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="@color/text_blue" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/text_blue"
            android:text="  基本信息"/>
    </LinearLayout>

    <TextView
        android:id="@+id/introduce_mingyi_information"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

    </TextView>
    //下划线
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#D9D9D9" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <!--下划线设定-->
        <!--layout_gravity设定相对于父布局位置，而gravity是文字在具体控件上的位置-->
        <TextView
            android:layout_width="7dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="@color/text_blue" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/text_blue"
            android:text="  擅长"/>
    </LinearLayout>

    <TextView
        android:id="@+id/introduce_mingyi_goodat"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

    </TextView>
    //下划线
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#D9D9D9" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <!--下划线设定-->
        <!--layout_gravity设定相对于父布局位置，而gravity是文字在具体控件上的位置-->
        <TextView
            android:layout_width="7dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="@color/text_blue" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/text_blue"
            android:text="  荣誉"/>
    </LinearLayout>

    <TextView
        android:id="@+id/introduce_mingyi_rongyu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#D9D9D9" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <!--下划线设定-->
        <!--layout_gravity设定相对于父布局位置，而gravity是文字在具体控件上的位置-->
        <TextView
            android:layout_width="7dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="@color/text_blue" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/text_blue"
            android:text="  经历"/>
    </LinearLayout>

    <TextView
        android:id="@+id/introduce_mingyi_jingli"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

    </TextView>
</LinearLayout>